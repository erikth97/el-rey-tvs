---
interface Props {
  position?: 'top-left' | 'top-right' | 'bottom-left' | 'bottom-right';
}

const { position = 'top-left' } = Astro.props;

// Calcula la rotación basada en la posición
const getRotation = (pos: string) => {
  switch(pos) {
    case 'top-right': return '45deg';
    case 'bottom-right': return '135deg';
    case 'bottom-left': return '225deg';
    default: return '315deg';
  }
};

const rotation = getRotation(position);
---

<div class={`decoration ${position}`}>
  <img 
    src="/assets/decorative/flower-3-petals.png" 
    alt=""
    style={`transform: rotate(${rotation});`}
  />
</div>

<style>
  .decoration {
    position: absolute;
    pointer-events: none;
    width: 48px;
    height: 48px;
  }

  .decoration img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .top-left {
    top: 16px;
    left: 16px;
  }

  .top-right {
    top: 16px;
    right: 16px;
  }

  .bottom-left {
    bottom: 16px;
    left: 16px;
  }

  .bottom-right {
    bottom: 16px;
    right: 16px;
  }
</style>
