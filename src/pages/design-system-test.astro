---
import BaseLayout from '@/layout/BaseLayout.astro';
import { ASSETS_PATHS, VEHICLES_DATA, APP_CONFIG } from '../utils/constants';
---

<BaseLayout title="Design System Test - El Rey TVS">
  <div class="bg-black text-white min-h-screen">
    
    <!-- Header del Test -->
    <div class="container-mobile py-8">
      <h1 class="text-hero text-brand text-center mb-4">
        Design System Test
      </h1>
      <p class="text-body text-center text-muted mb-8">
        Verificaci√≥n completa del sistema de dise√±o El Rey TVS
      </p>
    </div>

    <!-- 1. TYPOGRAPHY SYSTEM -->
    <section class="py-8 border-b border-gray-800">
      <div class="container-mobile">
        <h2 class="text-section-title text-secondary mb-6">
          üî§ SISTEMA TIPOGR√ÅFICO
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Jerarqu√≠a Tipogr√°fica -->
          <div class="space-y-4">
            <h3 class="text-xl font-bold text-accent mb-4">Jerarqu√≠a de Texto</h3>
            
            <div class="space-y-3">
              <div>
                <p class="text-sm text-muted mb-1">text-hero (36px-48px)</p>
                <div class="text-hero text-brand">As√≠ se ve un Rey</div>
              </div>
              
              <div>
                <p class="text-sm text-muted mb-1">text-rey-title (48px-80px)</p>
                <div class="text-rey-title text-brand">REY</div>
              </div>
              
              <div>
                <p class="text-sm text-muted mb-1">text-section-title (20px-24px)</p>
                <div class="text-section-title text-secondary">ELIGE TU MOTOCARRO</div>
              </div>
              
              <div>
                <p class="text-sm text-muted mb-1">text-vehicle-name (24px-32px)</p>
                <div class="text-vehicle-name text-brand">King Deluxe Plus</div>
              </div>
              
              <div>
                <p class="text-sm text-muted mb-1">text-vehicle-description (16px-18px)</p>
                <div class="text-vehicle-description text-accent">"El m√°s c√≥modo"</div>
              </div>
              
              <div>
                <p class="text-sm text-muted mb-1">text-cta-button (18px-20px)</p>
                <div class="text-cta-button text-inverse bg-brand px-4 py-2 rounded-full inline-block">¬°ARRE!</div>
              </div>
              
              <div>
                <p class="text-sm text-muted mb-1">text-body (14px-16px)</p>
                <div class="text-body text-inverse">Texto de cuerpo para descripciones y contenido general</div>
              </div>
            </div>
          </div>
          
          <!-- Familias de Fuentes -->
          <div class="space-y-4">
            <h3 class="text-xl font-bold text-accent mb-4">Familias de Fuentes</h3>
            
            <div class="space-y-3">
              <div>
                <p class="text-sm text-muted mb-1">font-chunky (ChunkyRetro)</p>
                <div class="font-chunky text-2xl text-brand">AS√ç SE VE UN REY</div>
              </div>
              
              <div>
                <p class="text-sm text-muted mb-1">font-sign (SignLabeling)</p>
                <div class="font-sign text-xl text-secondary">¬øC√ìMO TE DICEN, CAMPE√ìN?</div>
              </div>
              
              <div>
                <p class="text-sm text-muted mb-1">font-script (SingLabeling)</p>
                <div class="font-script text-lg text-accent">D√©janos tu cel</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 2. COLOR SYSTEM -->
    <section class="py-8 border-b border-gray-800">
      <div class="container-mobile">
        <h2 class="text-section-title text-secondary mb-6">
          üé® SISTEMA DE COLORES
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Colores Principales -->
          <div>
            <h3 class="text-lg font-bold text-accent mb-4">Colores Principales</h3>
            <div class="space-y-3">
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 bg-brand rounded"></div>
                <div>
                  <p class="font-bold text-brand">TVS Red</p>
                  <p class="text-sm text-muted">#E31E24</p>
                </div>
              </div>
              
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 bg-secondary rounded"></div>
                <div>
                  <p class="font-bold text-secondary">TVS Blue</p>
                  <p class="text-sm text-muted">#1E40AF</p>
                </div>
              </div>
              
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 bg-accent rounded"></div>
                <div>
                  <p class="font-bold text-accent">Gold</p>
                  <p class="text-sm text-muted">#F59E0B</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Variaciones -->
          <div>
            <h3 class="text-lg font-bold text-accent mb-4">Variaciones</h3>
            <div class="space-y-3">
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 bg-brand-dark rounded"></div>
                <div>
                  <p class="font-bold">Red Dark</p>
                  <p class="text-sm text-muted">#B71C1C</p>
                </div>
              </div>
              
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 rounded" style="background-color: var(--color-tvs-blue-dark);"></div>
                <div>
                  <p class="font-bold">Blue Dark</p>
                  <p class="text-sm text-muted">#1E3A8A</p>
                </div>
              </div>
              
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 rounded" style="background-color: var(--color-gold-dark);"></div>
                <div>
                  <p class="font-bold">Gold Dark</p>
                  <p class="text-sm text-muted">#D97706</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Estados -->
          <div>
            <h3 class="text-lg font-bold text-accent mb-4">Estados</h3>
            <div class="space-y-3">
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 rounded" style="background-color: var(--color-success);"></div>
                <div>
                  <p class="font-bold text-green-400">Success</p>
                  <p class="text-sm text-muted">#10B981</p>
                </div>
              </div>
              
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 rounded" style="background-color: var(--color-warning);"></div>
                <div>
                  <p class="font-bold text-yellow-400">Warning</p>
                  <p class="text-sm text-muted">#F59E0B</p>
                </div>
              </div>
              
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 rounded" style="background-color: var(--color-error);"></div>
                <div>
                  <p class="font-bold text-red-400">Error</p>
                  <p class="text-sm text-muted">#EF4444</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 3. BUTTON SYSTEM -->
    <section class="py-8 border-b border-gray-800">
      <div class="container-mobile">
        <h2 class="text-section-title text-secondary mb-6">
          üîò SISTEMA DE BOTONES
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Variantes de Botones -->
          <div>
            <h3 class="text-lg font-bold text-accent mb-4">Variantes</h3>
            <div class="space-y-4">
              <div>
                <p class="text-sm text-muted mb-2">Primary Button</p>
                <button class="btn-base btn-primary">¬°ARRE!</button>
              </div>
              
              <div>
                <p class="text-sm text-muted mb-2">Secondary Button</p>
                <button class="btn-base btn-secondary">CONTINUAR</button>
              </div>
              
              <div>
                <p class="text-sm text-muted mb-2">Outline Button</p>
                <button class="btn-base btn-outline">CANCELAR</button>
              </div>
            </div>
          </div>
          
          <!-- Estados de Botones -->
          <div>
            <h3 class="text-lg font-bold text-accent mb-4">Estados</h3>
            <div class="space-y-4">
              <div>
                <p class="text-sm text-muted mb-2">Normal</p>
                <button class="btn-base btn-primary">NORMAL</button>
              </div>
              
              <div>
                <p class="text-sm text-muted mb-2">Hover (simulado)</p>
                <button class="btn-base btn-primary hover:bg-brand-dark" style="background-color: var(--color-tvs-red-dark);">HOVER</button>
              </div>
              
              <div>
                <p class="text-sm text-muted mb-2">Disabled</p>
                <button class="btn-base btn-primary opacity-50 cursor-not-allowed" disabled>DISABLED</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 4. SPACING SYSTEM -->
    <section class="py-8 border-b border-gray-800">
      <div class="container-mobile">
        <h2 class="text-section-title text-secondary mb-6">
          üìè SISTEMA DE ESPACIADO
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Escala de Espaciado -->
          <div>
            <h3 class="text-lg font-bold text-accent mb-4">Escala de Espaciado</h3>
            <div class="space-y-2">
              <div class="flex items-center gap-4">
                <div class="w-1 bg-brand" style="height: 4px;"></div>
                <span class="text-sm">space-1 (4px)</span>
              </div>
              <div class="flex items-center gap-4">
                <div class="w-2 bg-brand" style="height: 8px;"></div>
                <span class="text-sm">space-2 (8px)</span>
              </div>
              <div class="flex items-center gap-4">
                <div class="w-4 bg-brand" style="height: 16px;"></div>
                <span class="text-sm">space-4 (16px)</span>
              </div>
              <div class="flex items-center gap-4">
                <div class="w-6 bg-brand" style="height: 24px;"></div>
                <span class="text-sm">space-6 (24px)</span>
              </div>
              <div class="flex items-center gap-4">
                <div class="w-8 bg-brand" style="height: 32px;"></div>
                <span class="text-sm">space-8 (32px)</span>
              </div>
            </div>
          </div>
          
          <!-- Container System -->
          <div>
            <h3 class="text-lg font-bold text-accent mb-4">Container System</h3>
            <div class="space-y-4">
              <div>
                <p class="text-sm text-muted mb-2">container-mobile (max-width: 430px)</p>
                <div class="bg-gray-800 p-4 rounded container-mobile">
                  <p class="text-sm">Contenido mobile</p>
                </div>
              </div>
              
              <div>
                <p class="text-sm text-muted mb-2">container-narrow (max-width: 320px)</p>
                <div class="bg-gray-800 p-4 rounded container-narrow">
                  <p class="text-sm">Contenido narrow</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 5. ANIMATION SYSTEM -->
    <section class="py-8 border-b border-gray-800">
      <div class="container-mobile">
        <h2 class="text-section-title text-secondary mb-6">
          ‚ö° SISTEMA DE ANIMACIONES
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Animaciones de Entrada -->
          <div>
            <h3 class="text-lg font-bold text-accent mb-4">Animaciones de Entrada</h3>
            <div class="space-y-4">
              <div class="bg-gray-800 p-4 rounded animate-fade-in-up">
                <p class="text-sm">Fade In Up</p>
              </div>
              
              <div class="bg-gray-800 p-4 rounded animate-fade-in-scale">
                <p class="text-sm">Fade In Scale</p>
              </div>
              
              <div class="bg-gray-800 p-4 rounded animate-slide-in-right">
                <p class="text-sm">Slide In Right</p>
              </div>
            </div>
          </div>
          
          <!-- Animaciones Continuas -->
          <div>
            <h3 class="text-lg font-bold text-accent mb-4">Animaciones Continuas</h3>
            <div class="space-y-4">
              <div class="bg-brand w-16 h-16 rounded animate-pulse-red"></div>
              <p class="text-sm">Pulse Red</p>
              
              <div class="bg-secondary w-16 h-16 rounded animate-pulse-blue"></div>
              <p class="text-sm">Pulse Blue</p>
              
              <div class="bg-accent w-16 h-16 rounded animate-pulse-custom"></div>
              <p class="text-sm">Pulse Custom</p>
            </div>
          </div>
          
          <!-- Transiciones -->
          <div>
            <h3 class="text-lg font-bold text-accent mb-4">Transiciones</h3>
            <div class="space-y-4">
              <button class="bg-gray-800 p-4 rounded transition-colors hover:bg-brand text-sm">
                Transition Colors
              </button>
              
              <button class="bg-gray-800 p-4 rounded transition-transform hover:scale-105 text-sm">
                Transition Transform
              </button>
              
              <button class="bg-gray-800 p-4 rounded transition-fast hover:bg-secondary text-sm">
                Transition Fast
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 6. RESPONSIVE TEST -->
    <section class="py-8 border-b border-gray-800">
      <div class="container-mobile">
        <h2 class="text-section-title text-secondary mb-6">
          üì± TEST RESPONSIVO
        </h2>
        
        <div class="grid grid-cols-1 gap-6">
          <!-- Test de Breakpoints -->
          <div class="bg-gray-800 p-6 rounded">
            <h3 class="text-lg font-bold text-accent mb-4">Breakpoints Activos</h3>
            <div class="space-y-2 text-sm">
              <div class="block sm:hidden text-green-400">‚úÖ Mobile (< 640px)</div>
              <div class="hidden sm:block md:hidden text-green-400">‚úÖ Small (640px - 768px)</div>
              <div class="hidden md:block lg:hidden text-green-400">‚úÖ Medium (768px - 1024px)</div>
              <div class="hidden lg:block xl:hidden text-green-400">‚úÖ Large (1024px - 1280px)</div>
              <div class="hidden xl:block text-green-400">‚úÖ Extra Large (> 1280px)</div>
            </div>
          </div>
          
          <!-- Texto Responsivo -->
          <div class="bg-gray-800 p-6 rounded">
            <h3 class="text-lg font-bold text-accent mb-4">Escalado de Texto</h3>
            <div class="space-y-3">
              <div class="text-hero text-brand">Hero Text (responsive)</div>
              <div class="text-section-title text-secondary">Section Title (responsive)</div>
              <div class="text-vehicle-name text-accent">Vehicle Name (responsive)</div>
              <div class="text-body">Body text que se escala con el viewport</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 7. RESULTADO DEL TEST -->
    <section class="py-8">
      <div class="container-mobile">
        <h2 class="text-section-title text-secondary mb-6">
          ‚úÖ RESULTADO DEL TEST
        </h2>
        
        <div class="bg-green-900 border border-green-400 p-6 rounded">
          <h3 class="text-xl font-bold text-green-400 mb-4">üéâ Design System Verificado</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-sm">
            <div>
              <h4 class="font-bold text-green-400 mb-2">‚úÖ Elementos Funcionando:</h4>
              <ul class="space-y-1 text-green-200">
                <li>‚Ä¢ Sistema tipogr√°fico completo</li>
                <li>‚Ä¢ Paleta de colores TVS</li>
                <li>‚Ä¢ Sistema de botones</li>
                <li>‚Ä¢ Espaciado consistente</li>
                <li>‚Ä¢ Animaciones fluidas</li>
              </ul>
            </div>
            <div>
              <h4 class="font-bold text-green-400 mb-2">üìã Listo para Desarrollo:</h4>
              <ul class="space-y-1 text-green-200">
                <li>‚Ä¢ Componentes base definidos</li>
                <li>‚Ä¢ Variables CSS organizadas</li>
                <li>‚Ä¢ Responsive funcionando</li>
                <li>‚Ä¢ Fuentes custom cargando</li>
                <li>‚Ä¢ Performance optimizada</li>
              </ul>
            </div>
          </div>
          
          <div class="mt-6 p-4 bg-green-800 rounded">
            <p class="text-green-100 text-center font-bold">
              üöÄ PASO 3.6 COMPLETADO - Sistema de dise√±o verificado y listo para producci√≥n
            </p>
          </div>
        </div>
      </div>
    </section>

  </div>
</BaseLayout>