// src/pages/selector.astro
---

<html lang="es">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Selecciona el tipo de documento a analizar" />
    <title>Selector de Documento - Document AI</title>
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">
    <div class="container mx-auto px-4 py-8 max-w-4xl">
        <!-- Progress Bar -->
        <div class="mb-8">
            <div class="flex items-center justify-center mb-4">
                <div class="flex items-center space-x-4">
                    <div class="w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-semibold">1</div>
                    <div class="w-16 h-1 bg-blue-500 rounded"></div>
                    <div class="w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-semibold">2</div>
                    <div class="w-16 h-1 bg-gray-300 rounded"></div>
                    <div class="w-8 h-8 bg-gray-300 text-gray-500 rounded-full flex items-center justify-center text-sm font-semibold">3</div>
                    <div class="w-16 h-1 bg-gray-300 rounded"></div>
                    <div class="w-8 h-8 bg-gray-300 text-gray-500 rounded-full flex items-center justify-center text-sm font-semibold">4</div>
                </div>
            </div>
            <p class="text-center text-gray-600 text-sm">Paso 2 de 4: Selecciona el tipo de documento</p>
        </div>

        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
                驴Qu茅 tipo de documento vas a analizar?
            </h1>
            <p class="text-gray-600 max-w-2xl mx-auto">
                Selecciona el tipo de documento para optimizar el an谩lisis y obtener mejores resultados
            </p>
        </div>

        <!-- Document Types Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
            <!-- ID Card -->
            <div class="document-option bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-all duration-300 cursor-pointer border-2 border-transparent hover:border-blue-500" data-type="id">
                <div class="text-center">
                    <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-blue-600 rounded-xl mx-auto mb-4 flex items-center justify-center">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2"></path>
                        </svg>
                    </div>
                    <h3 class="font-semibold text-gray-800 mb-2">Identificaci贸n</h3>
                    <p class="text-sm text-gray-600 mb-4">C茅dulas, pasaportes, licencias de conducir</p>
                    <div class="text-xs text-gray-500">
                        Extrae: nombre, n煤mero, fecha de nacimiento, direcci贸n
                    </div>
                </div>
            </div>

            <!-- Invoice -->
            <div class="document-option bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-all duration-300 cursor-pointer border-2 border-transparent hover:border-blue-500" data-type="invoice">
                <div class="text-center">
                    <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-green-600 rounded-xl mx-auto mb-4 flex items-center justify-center">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                    </div>
                    <h3 class="font-semibold text-gray-800 mb-2">Factura</h3>
                    <p class="text-sm text-gray-600 mb-4">Facturas comerciales, comprobantes fiscales</p>
                    <div class="text-xs text-gray-500">
                        Extrae: proveedor, monto, fecha, productos, impuestos
                    </div>
                </div>
            </div>

            <!-- Receipt -->
            <div class="document-option bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-all duration-300 cursor-pointer border-2 border-transparent hover:border-blue-500" data-type="receipt">
                <div class="text-center">
                    <div class="w-16 h-16 bg-gradient-to-r from-purple-500 to-purple-600 rounded-xl mx-auto mb-4 flex items-center justify-center">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 14l6-6m-5.5.5h.01m4.99 5h.01M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16l3.5-2 3.5 2 3.5-2 3.5 2zM10 8.5a.5.5 0 11-1 0 .5.5 0 011 0zm5 5a.5.5 0 11-1 0 .5.5 0 011 0z"></path>
                        </svg>
                    </div>
                    <h3 class="font-semibold text-gray-800 mb-2">Recibo</h3>
                    <p class="text-sm text-gray-600 mb-4">Tickets de compra, recibos de servicios</p>
                    <div class="text-xs text-gray-500">
                        Extrae: comercio, total, fecha, productos, m茅todo de pago
                    </div>
                </div>
            </div>

            <!-- Document -->
            <div class="document-option bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-all duration-300 cursor-pointer border-2 border-transparent hover:border-blue-500" data-type="document">
                <div class="text-center">
                    <div class="w-16 h-16 bg-gradient-to-r from-orange-500 to-orange-600 rounded-xl mx-auto mb-4 flex items-center justify-center">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                    </div>
                    <h3 class="font-semibold text-gray-800 mb-2">Documento</h3>
                    <p class="text-sm text-gray-600 mb-4">Contratos, certificados, cartas</p>
                    <div class="text-xs text-gray-500">
                        Extrae: texto completo, fechas, firmas, sellos
                    </div>
                </div>
            </div>
        </div>

        <!-- Selected Type Display -->
        <div id="selectedDisplay" class="hidden bg-blue-50 border border-blue-200 rounded-xl p-4 mb-8">
            <div class="flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-blue-800 font-medium">Tipo seleccionado: </span>
                <span id="selectedType" class="text-blue-900 font-semibold ml-1"></span>
            </div>
        </div>

        <!-- Navigation -->
        <div class="flex justify-between items-center">
            <button 
                id="backButton"
                class="flex items-center text-gray-600 hover:text-gray-800 transition-colors"
                data-nav-back
            >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Volver
            </button>
            
            <button 
                id="continueButton"
                class="bg-gradient-to-r from-blue-500 to-indigo-600 hover:from-blue-600 hover:to-indigo-700 text-white font-semibold py-3 px-6 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 disabled:opacity-50 disabled:cursor-not-allowed"
                disabled
            >
                Continuar
                <svg class="w-5 h-5 ml-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
            </button>
        </div>
    </div>

    <script type="module">
        // Importar sistemas de navegaci贸n y storage
        import { navigationManager, setNavigationData } from '/src/utils/helpers/navigation.js';
        import { storage, saveDocumentType } from '/src/utils/helpers/storage.js';

        document.addEventListener('DOMContentLoaded', function() {
            const documentOptions = document.querySelectorAll('.document-option');
            const continueButton = document.getElementById('continueButton');
            const selectedDisplay = document.getElementById('selectedDisplay');
            const selectedTypeSpan = document.getElementById('selectedType');
            let selectedType = null;

            // Mapeo de tipos a nombres legibles
            const typeNames = {
                'id': 'Identificaci贸n',
                'invoice': 'Factura',
                'receipt': 'Recibo',
                'document': 'Documento'
            };

            // Verificar si ya hay un tipo seleccionado
            const savedType = storage.getDocumentType();
            if (savedType) {
                selectDocumentType(savedType);
            }

            // Manejar selecci贸n de tipo de documento
            documentOptions.forEach(option => {
                option.addEventListener('click', function() {
                    const documentType = this.getAttribute('data-type');
                    selectDocumentType(documentType);
                });
            });

            function selectDocumentType(type) {
                // Limpiar selecciones anteriores
                documentOptions.forEach(opt => {
                    opt.classList.remove('border-blue-500', 'bg-blue-50');
                });

                // Seleccionar nuevo tipo
                const selectedOption = document.querySelector(`[data-type="${type}"]`);
                if (selectedOption) {
                    selectedOption.classList.add('border-blue-500', 'bg-blue-50');
                }

                selectedType = type;

                // Mostrar tipo seleccionado
                selectedDisplay.classList.remove('hidden');
                selectedTypeSpan.textContent = typeNames[type] || type;

                // Habilitar bot贸n continuar
                continueButton.disabled = false;

                // Guardar en storage
                saveDocumentType(type);
                setNavigationData('selectedDocumentType', type);

                console.log(' Tipo de documento seleccionado:', type);
            }

            // Manejar navegaci贸n
            continueButton.addEventListener('click', function() {
                if (selectedType) {
                    // Asegurar que los datos est谩n guardados
                    saveDocumentType(selectedType);
                    setNavigationData('selectedDocumentType', selectedType);
                    
                    // Navegar a c谩mara
                    window.location.href = '/camera';
                }
            });

            // Log de inicializaci贸n
            console.log(' Document selector initialized');
        });
    </script>
</body>
</html>