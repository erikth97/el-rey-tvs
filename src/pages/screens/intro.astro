---
import ScreenLayout from '@/layout/ScreenLayout.astro';
---

<ScreenLayout 
  screenId="intro" 
  backgroundColor="gray"
  nextScreen="instructions"
>
  <!-- Contenedor principal con textura de fondo corregida -->
  <div class="intro-container">
    
    <!-- Capa de textura de fondo -->
    <div class="background-texture"></div>
    
    <!-- Logo TVS en esquina superior derecha -->
    <div class="tvs-logo-container">
      <img 
        src="/assets/images/tvs-logo.png" 
        alt="TVS Logo" 
        class="tvs-logo"
      />
    </div>

    <!-- Contenido principal centrado -->
    <div class="main-content">
      
      <!-- Hero Image - LA IMAGEN PRINCIPAL DEL MOTOCARRO -->
      <div class="hero-section">
        <img 
          src="/assets/images/hero-el-rey.png" 
          alt="El Rey TVS Hero" 
          class="hero-image"
        />
      </div>
      
      <!-- Título principal como IMAGEN -->
      <div class="title-image-section">
        <img 
          src="/assets/decorative/vuelvete-rey.png" 
          alt="Vuélvete El Rey" 
          class="title-image"
        />
      </div>

      <!-- Elementos decorativos posicionados correctamente -->
      <!-- Estrella roja arriba izquierda -->
      <div class="decorative-element star-red-1">
        <img src="/assets/decorative/star-red.png" alt="" />
      </div>

      <!-- Estrella azul arriba derecha -->  
      <div class="decorative-element star-blue-1">
        <img src="/assets/decorative/star-blue.png" alt="" />
      </div>

      <!-- Estrella azul izquierda -->
      <div class="decorative-element star-blue-2">
        <img src="/assets/decorative/sing-blue.png" alt="" />
      </div>

      <!-- Estrella roja derecha -->
      <div class="decorative-element star-red-2">
        <img src="/assets/decorative/sign-yellow.png" alt="" />
      </div>

      <!-- Corona abajo centro -->
      <div class="decorative-element crown-bottom">
        <img src="/assets/decorative/crown.png" alt="" />
      </div>

      <!-- Estrella azul abajo derecha -->
      <div class="decorative-element star-blue-3">
        <img src="/assets/decorative/star-blue.png" alt="" />
      </div>

      <!-- Estrella roja abajo izquierda -->
      <div class="decorative-element star-red-3">
        <img src="/assets/decorative/star-red.png" alt="" />
      </div>

    </div>
  </div>
</ScreenLayout>

<script>
  // Auto-advance después de 20 minutos
  setTimeout(() => {
    window.location.href = '/instructions';
  }, 3000); 
</script>

<style>
  /* Contenedor principal - Sin scroll */
  .intro-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: linear-gradient(135deg, #E8E8E8 0%, #F5F5F5 100%);
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  /* Fondo de imagen corregido */
  .background-texture {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('/assets/overlays/bk-inicio.jpg');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    opacity: 0.6;
    z-index: 1;
  }

  /* Logo TVS */
  .tvs-logo-container {
    position: absolute;
    top: 120px;
    right: 90px;
    z-index: 30;
  }

  .tvs-logo {
    height: 60px;
    width: auto;
  }

  /* Contenido principal - Sin desbordamiento */
  .main-content {
    position: relative;
    z-index: 10;
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0;
    overflow: hidden;
  }

  /* Sección del héroe */
.hero-section {
  margin-bottom: 10px;
  z-index: 20;
  position: relative;
}

  .hero-image {
    width: 1000px;
    height: 750px;
    object-fit: contain;
    margin: 0 auto;
    display: block;
    animation: heroBounceIn 1.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    filter: drop-shadow(0 10px 20px rgba(0,0,0,0.1));
  }

  /* Sección del título como imagen */
  .title-image-section {
    text-align: center;
    z-index: 20;
    position: relative;
    animation: titleUp 0.8s ease-out 0.8s both;
  }

  .title-image {
    width: 700px;
    height: 650px;
    margin: 0 auto;
    display: block;
  }

  /* Elementos decorativos */
  .decorative-element {
    position: absolute;
    z-index: 150;
    pointer-events: none;
  }

  .decorative-element img {
    display: block;
    width: 100%;
    height: 100%;
  }

  /* Posicionamiento específico de elementos decorativos */
  .star-red-1 {
    top: 1600px;
    right: 800px;
    width: 100px;
    height: 80px;
    animation: floatMedium 3.5s ease-in-out infinite 0.5s;
  }

  .star-blue-1 {
    top: 1350px;
    left: 800px;
    width: 100px;
    height: 80px;
    animation: floatGentle 3s ease-in-out infinite;
  }

  .star-blue-2 {
    top: 50%;
    left: 48px;
    transform: translateY(-32px);
    width: 110px;
    height: 120px;
    animation: floatGentle 4s ease-in-out infinite 1s;
  }

  .star-red-2 {
    top: 50%;
    right: 64px;
    transform: translateY(16px);
    width: 110px;
    height: 100px;
    animation: floatMedium 3.2s ease-in-out infinite 1.5s;
  }

.crown-bottom {
  bottom: 2px;
  left: 50%;
  transform: translateX(-50%);
  width: 400px;
  height: 400px;
  animation: floatStrong 4.2s ease-in-out infinite 0.8s;
}
  .star-blue-3 {
    bottom: 800px;
    right: 700px;
    width: 110px;
    height: 110px;
    animation: floatGentle 3.8s ease-in-out infinite 2s;
  }

  .star-red-3 {
    bottom: 100px;
    left: 180px;
    width: 110px;
    height: 110px;
    animation: floatMedium 3.4s ease-in-out infinite 1.2s;
  }

  /* Animaciones */
  @keyframes heroBounceIn {
    0% {
      opacity: 0;
      transform: scale(0.3) translateY(100px);
    }
    60% {
      opacity: 1;
      transform: scale(1.1) translateY(-20px);
    }
    80% {
      transform: scale(0.95) translateY(10px);
    }
    100% {
      transform: scale(1) translateY(0);
    }
  }

  @keyframes titleUp {
    0% {
      opacity: 0;
      transform: translateY(50px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes floatGentle {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-10px) rotate(10deg);
    }
  }

  @keyframes floatMedium {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-15px) rotate(-8deg);
    }
  }

  @keyframes floatStrong {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
    }
  }

  /* Responsive design - Sin scroll */
  @media (max-width: 768px) {
    .hero-image {
      width: 60vw;
      height: auto;
      max-width: 350px;
    }

    .title-image {
      width: 67.5vw;
      max-width: 360px;
    }

    .main-content {
      padding: 0;
      height: 100vh;
    }

    .tvs-logo-container {
      top: 2vh;
      right: 4vw;
    }

    .tvs-logo {
      height: 4vh;
      max-height: 32px;
    }

    /* Elementos decorativos escalados para mobile */
    .decorative-element {
      transform: scale(0.6);
    }

    .hero-section {
      margin-bottom: 10vh;
    }
  }

  @media (max-width: 480px) {
    .hero-image {
      width: 65vw;
      max-width: 300px;
    }

    .title-image {
      width: 75vw;
      max-width: 300px;
    }

    .hero-section {
      margin-bottom: 15vh;
    }

    .decorative-element {
      transform: scale(0.5);
    }
  }

  /* Mejoras de accesibilidad */
  @media (prefers-reduced-motion: reduce) {
    .hero-image,
    .title-image,
    .decorative-element {
      animation: none;
    }
  }
</style>